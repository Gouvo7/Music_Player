<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/black_fainted">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@drawable/music_icon_circle" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            >
            <TextView
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:text="Ήρθε ο κώστας να μας πει πως γαμιέται"
                android:textAlignment="center"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:textSize="16dp"/>

            <ImageButton
                android:id="@+id/notification_prev"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/prev_song_icon" />

            <!-- Play/Pause Button -->
            <ImageButton
                android:id="@+id/notification_play_pause"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/play_song_icon" />

            <!-- Next Button -->
            <ImageButton
                android:id="@+id/notification_next"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/next_song_icon"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>